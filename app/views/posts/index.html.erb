<% if notice %>
 <p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>

<h1>Posts</h1>
<div>
  <% @posts.each do |post| %>
    <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.body %></p>
          <%= link_to 'Read More', post_path(post), :class => 'btn btn-primary' %>
        </div>
    </div>
    <br>
  <% end %>
</div>

